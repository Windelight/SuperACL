<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>会员登录</title>
    
</head>
<style>
    *{
        padding: 0;
        margin: 0;
    }
    body{
        margin: 0;
        background: none;
        filter: none;
    }
    .header{
        height: 72px;
        background: #ffffff;
        width: 944px;
        margin-left:auto;
        margin-right:auto;
        margin-top:10px;
    }
    .login-box{
        height: 475px;
        background: #e4e4e4 url("https://account.shopex.cn/pic/cms/cms58340d916af79.jpg") center  top no-repeat;
        width: 100%;
        position: relative;
    }
    .login-box-bg{
        background: #7186ef;
        width: 1230px;
        height: 430px;
        position: absolute;
        left:50%;
        top:0;
        margin-left: -615px;
        z-index: 1;
    }
    .login-main{
        width: 990px;
        margin:0 auto;
        height: 475px;
        position: relative;
        z-index: 100;
    }
    .login-banner{
        width: 645px;
        height: 475px;
        float: left;
    }
   .login-banner a{
      display:block;
      width:645px;
      height:475px;
   }
    .login-tab{
        width: 305px;
        float: right;
        background: #ffffff;
        padding:20px;
        margin-top:90px;
    }
    .login_text{
        width: 305px;
        list-style: none;
    }
    .login_text li{
        border:1px solid #e8e8e8;
        height: 30px;
        margin-bottom: 20px;
        position: relative;
    }
    .login_text li span{
        width: 30px;
        height: 30px;
        background: #dcdcdc;
        display: inline-block;
        position: absolute;
        left: 0;
        top:0;
    }
    .login_text li span.nameId{
        background:#dcdcdc url("https://account.shopex.cn/bundles/shopexusercentershop/img/user_icon.png") center center no-repeat;
    }
    .login_text li span.passId{
        background: #dcdcdc url("https://account.shopex.cn/bundles/shopexusercentershop/img/password_icon.png") center center no-repeat;
    }
    .login_text li input{
        border: 0 none;
        background: transparent;
        height: 28px;
        line-height:28px;
        margin-left: 30px;
        padding: 0 5px;
        font-size: 12px;
        width: 263px;
        outline: none;
    }
    .loginBtn{
        width: 305px;
        height: 36px;
        background: #F38118;
        border: 0 none;
        cursor: pointer;
        color: #fff;
        border-radius: 5px;
        margin-top: 10px;
        font-size:20px;
    }
    #captchas_div input{
        border: 1px solid #dddddd;
        background-color: #fff;
        font-size: 13px;
        color: #666;
        outline: none;
        height: 30px;
        padding-left: 10px;
        width:100px;
    }
    .forget{
        font-size: 12px;
        color: #616161;
        margin-top: 30px;
        margin-bottom:20px;
        overflow: hidden;
        zoom:1;
    }
    .forget a{
        text-decoration: none;
        color: #616161;
        display: block;
        float: left;
    }
    .forget a.reg_btn{
        color: #00aeff;
        float: right;

    }
    .login-h{
        font-size: 20px;
        color: #000000;
        margin-bottom: 20px;
        font-weight:normal;
    }
    .footer{
        text-align: center;
        padding:40px 0;
        color: #333;
        font-size: 12px;
    }
    .login_alert{
        background-color: #f2dede;
        height: 30px;
        color: #a94442;
        padding-left: 10px;
        line-height: 30px;
        font-size: 12px;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        margin-bottom:10px;
    }
</style>
<body>
<header class="header">
    <a href="http://yunqi.shopex.cn/" target="_blank">
        <img src="http://account.shopex.cn/bundles/shopexusercentershop/img/logo.png">
    </a>
</header>
<div class="login-box">
    <div class="login-main">
        <div class="login-banner">
            <a href='http://yunqi.shopex.cn/products/wsc?from=login'  target="_blank"><img src="https://account.shopex.cn/pic/cms/cms58046db1c73ae.png"></a>
        </div>
        <div class="login-tab">
            <form  method="POST" action="authorize" id="login_verify">
                   <h2 class="login-h">账户登录</h2>
                <div id="login_failed" class="login_alert" style='display:none'>用户名或密码错</div>
                <input type="hidden" name="_runtime_state" value="response_type=code&amp;client_id=v3dnc4s7&amp;redirect_uri=http%3A%2F%2Fupdate.shopex.com.cn%2Fversion%2Fprogram%2FECShop%2Fdownload_ecshop_utf8.php"  />
                <input name="remember-me" type="hidden" value="true" />
                <ul class="login_text">
                    <li>
                        <span  class="nameId"></span>
                        <input type="text" name="username" placeholder="请填写您注册手机号或邮箱">
                    </li>
                    <li>
                        <span  class="passId"></span>
                        <input type="password"  name="password"  placeholder="请输入密码">
                    </li>
                </ul>
                <div id="captchas_div" style="display: none;">
                    <input type="text" placeholder="请输入验证码" name="captchas">
                    <img src="captchas?point_size=28&code_len=4" style="height: 30px; vertical-align: middle" onclick="javascript:this.src='captchas?point_size=28&code_len=4&'+Math.random();return false;" />
                </div>
                <p class="forget">
                    <a href="https://account.shopex.cn/forget?" target="_blank">忘记密码？</a>
                    <a href="https://account.shopex.cn/reg?" target="_blank" class="reg_btn">没有账号？立即免费注册</a>
                </p>
                <button type="submit" class="loginBtn" id="loginBtn">登&#12288;&#12288;录</button>
            </form>
        </div>
    </div>

    <p class="footer">© 2003-2016 ShopEx,Inc.All rights reserved.</p>
</div>

<script src="http://account.shopex.cn/bundles/shopexusercentershop/js/jquery-1.11.2.min.js"></script>
<script src='http://account.shopex.cn/bundles/shopexusercentershop/js/j.validate.js'></script>
<script>
    $(function(){
        var form = $('#login_verify');
        form.validate();
    });
    var login_failed_msg = "";
    var login_need_captchas =   false ;
    var always_verify_identity =  false ;
    if (always_verify_identity) {
        var login_id = "$login_id";
        $('#login_verify input[name=username]').closest('.form-group').css('margin-left', '140px')
                .html('<input type="hidden" name="username" value="'+login_id+'"><span>您目前已登录账户: '+login_id+' ，请确认密码</span>');
    }
    if(login_need_captchas){
        document.getElementById('captchas_div').style.display='';
    }
    if(login_failed_msg == "failed_too_many"){
        document.getElementById('login_failed').style.display='';
        document.getElementById('login_failed').innerHTML='登陆失败，登录错误次数过多';
    }
    if(login_failed_msg == "captchas_timeout"){
        document.getElementById('login_failed').style.display='';
        document.getElementById('login_failed').innerHTML='登陆失败，验证码超时';
    }
    if(login_failed_msg == "captchas_not_match"){
        document.getElementById('login_failed').style.display='';
        document.getElementById('login_failed').innerHTML='登陆失败，验证码不匹配!';
    }
    if(login_failed_msg == "captchas_not_empty"){
        document.getElementById('login_failed').style.display='';
        document.getElementById('login_failed').innerHTML='登陆失败，验证码不能为空!';
    }
    if(login_failed_msg == "username_password_not_match"){
        document.getElementById('login_failed').style.display='';
        document.getElementById('login_failed').innerHTML='登陆失败，您的账号或密码不正确';
    }

    console.log(window.location.search);

    function getQueryString(name) {
        var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
        var r = window.location.search.substr(1).match(reg);
        if (r != null) return unescape(r[2]); return '';
    }
    var reg_url = 'http://account.shopex.cn/reg?';
    var ref = getQueryString('reg')?getQueryString('reg'):'yunqi_pcgw';
    reg_url =reg_url+'&refer='+ref;
    var uri =getQueryString("direct_reg_uri")?getQueryString("direct_reg_uri"):'';
    if(uri){reg_url =reg_url+'&redirecturi='+uri;}
    $("#reg_btn").attr("href",reg_url)
</script>
